#include "minishell.h"

int main(int argc, char **argv, char **envp)
{
	//make bulletin commands
	//register signal handler
	char	*line;
	
	while (1)
	{
		line = readline("minishell> ");
		if (!line || !strcmp(line, ""))
			continue ;
		add_history(line);
		handle_line(line);
	}
	return (0);
}
